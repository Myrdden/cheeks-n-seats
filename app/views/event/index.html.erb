<div style='height: 5rem; width: 100%'></div>

<div class='events-container'>
  <div id='filter' class='filter-box'>
    <ul class='genre'>
      <%= form_tag '/index', method: :get do %>
        <%#= select_tag "genre", options_for_select(facade.genres)%>
        <div id="slider"></div>

        <label for=price-start" class='filter-text'>Price Start: </>
        <input id="price-start" name="minPrice" type="number" value="<%= facade.priceMin %>"/>
        <label for=price-start" class='filter-text'>Price End:</>
        <input id="price-end" name="maxPrice" type="number" value="<%= facade.priceMax %>" />

        <label for='date' class='filter-text'>Click for Calendar</>
        <input type="text" class="datepicker filter-text" id="date" name="date" value="<%= facade.date %>" />

        <%= submit_tag 'Filter', class: 'btn' %>
      <% end %>
    </ul>
  </div>

  <div class='col s12'>
  <% facade.events.each_with_index do |event, n| %>
    <div class='events-row'>
      <button class='modal-trigger' style='margins: 0; padding: 0; border: 0; width: 100%; background: transparent' data-target='modal<%= n %>'>
      <div class='z-depth-4 events-card' style='position: relative'>
        <div class='events-image-container screen-centered'>
            <%# <img src='https://lorempixel.com/100/200/nightlife' style='width: 100%'> %>
            <img src='<%= event.image_url %>' style='height: 100%'>
        </div>

        <div class='events-content-container'>
          <div class='title-box red lighten-2 events-title-box'>
            <h5 class='events-title'><%= event.name %></h5>
          </div>
          <div class='events-info-box'>
            <div class='events-info-text'>
              <%# <em class='events-genre'><%= event.genre %1></em> %>
              <em><%= event.genre %></em>
              <%#= event.date %>
            </div>
          </div>
        </div>
      </div>
    </button>
    </div>

    <%= render partial: 'show', locals: {event: event, n: n} %>
  <% end %>
  </div>
</div>

