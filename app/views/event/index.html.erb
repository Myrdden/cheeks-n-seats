<img src='bg1.png' style='position: fixed; z-index: -999; height: 100%'>
<div style='height: 5rem; width: 100%'></div>
<div class='' style='width: 90%; margin: 0 auto'>
  <div class='col s12'>
  <% @events.each do |event| %>
    <div class='row' style='width: 100%; margin: 0 auto 20px auto'>
    <div class='z-depth-4' style='height: auto; border-radius: 2rem; margin-bottom: 1rem; overflow: hidden; width: 100%'>
      <div style='position: relative'>
      <div style='position: absolute; top: 0px; left: 0px; bottom: 0px; width: 33.3%'>
        <%# <div class='' style='float: left; width: 25%; height: auto; overflow: hidden'> %>
          <img src='https://lorempixel.com/100/200/nightlife' style='width: 100%'>
        <%# </div> %>
      </div>

      <div style='float: right; width: 66.6%'>
      <%# <div class='' style='float: left; height: 100%; width: 75%'> %>
      <div class='title-box red lighten-2' style='height: 33.3%; padding: 1rem 1rem 1rem 1rem'>
        <h5 style='color: white; margin: 0'><%= event.name %></h5>
        <em style='color: white; font-size: 1.15rem'><%= event.genre %></em>
      </div>
      <div style='height: 66.6%; width: 100%; background: rgba(255,255,255,0.85); padding: 1rem'>
        <div style='color: #ee6e73; font-size: 1.5rem'>
          <%= event.date[:date] %>
        </div>
        <div style='color: #ee6e73; font-size: 1.5rem'>
          <%= 'hecc' %><br>
          <%= event.venue[:address] %><br>
          <%= event.venue[:city]%>, <%= event.venue[:state] %>
        </div>
      </div>
      </div>
    </div>
    </div>
  <% end %>
  </div>
</div>
