<div style='height: 5rem; width: 100%'></div>
<button class='btn modal-trigger' data-target='modal1'>modal</button>
<div id='modal1' class='modal bottom-sheet' style='height: 92.5vh; max-height: 100%'>
  <div style='height: 7.5vh; border-bottom: 1px solid black'>
    <button class='modal-close btn'>Close</button>
  </div>
  <div class='modal-content' style='background: white'>
    <p>yeet</p>
  </div>
</div>

<ul class='genre'>
  <%= form_tag '/index', method: :get do %>
    <%= select_tag "genre", options_for_select(@venue_info.genres)%>
    <div id="slider"></div>

    <label for=price-start">Price Start: </>
    <input id="price-start" name="minPrice" type="number" value="<%= @venue_info.priceMin %>"/>
    <label for=price-start">Price End:</>
    <input id="price-end" name="maxPrice" type="number" value="<%= @venue_info.priceMax %>" />

    <input type="text" class="datepicker" id="date" name="date" value="<%= @venue_info.date %>" />

    <%= submit_tag 'Filter' %>
  <% end %>
</ul>

<div class='events-container'>
  <div class='col s12'>
  <% @venue_info.events.each do |event| %>
    <div class='events-row'>
    <div class='z-depth-4 events-card'>
      <div style='position: relative'>
        <div class='events-image-container'>
            <img src='https://lorempixel.com/100/200/nightlife' style='width: 100%'>
        </div>

        <div class='events-content-container'>
          <div class='title-box red lighten-2 events-title-box'>
            <h5 class='events-title'><%= event.name %></h5>
            <em class='events-genre'><%= event.genre %></em>
          </div>
          <div class='events-info-box'>
            <div class='events-info-text'>
              <%= event.date %>
            </div>
            <div class='events-info-text'>
              <%= event.venue[:name] %><br>
              <%= event.venue[:address] %><br>
              <%= event.venue[:city]%>, <%= event.venue[:state] %>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  <% end %>
  </div>
</div>

